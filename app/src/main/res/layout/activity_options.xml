<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Options">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_bar_background"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:contentDescription="Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Menu"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:contentDescription="@string/close_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close" />

    </LinearLayout>

    <!-- Middle content in a scroll view -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Item Row 1 -->
            <LinearLayout
                android:id="@+id/AuditChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/File"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/file"
                    android:contentDescription="file" />
                    <!--android:src="@drawable/ic_logo" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audit checklist Form"
                    android:layout_marginTop="14dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Item Row 2 -->
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/log_out"
                    android:contentDescription="Logo" />
                    <!--android:src="@drawable/ic_logo" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_marginTop="14dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/tools"
                    android:contentDescription="Logo" />
                    <!--android:src="@drawable/ic_logo"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Maintenance"
                    android:layout_marginTop="14dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/reboot"
                    android:contentDescription="Logo" />
                    <!--android:src="@drawable/ic_logo" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reboot System"
                    android:layout_marginTop="14dp"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Dashboard -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:contentDescription="@string/dashboard"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/grey_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Home">

            </TextView>
        </LinearLayout>

        <!-- Alerts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alerts_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/alerts"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/alert" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Alerts">

            </TextView>
        </LinearLayout>

        <!-- Stats -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stats_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="stats"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/stats" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Stats"
                >

            </TextView>
        </LinearLayout>

        <!-- Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/control_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/control"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/control" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Control"

                >

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
